<% unless pick.project_url? %>
<div class="col-sm-6 col-md-3 col-lg-3">
  <div class="pick" style="border-radius: 5px;" >
      <a href="<%= pick.url %>">
        <img src="<%= pick.image_url %>" alt="" >
      </a>
      <div class="caption">
        <div class="title">
          <br>
          <a href="/picks/<%= pick.id %>">
            <%= truncate(pick.title, :length => 60 ) %>
          </a>
        </div>
        <br>
        <% if current_user %>
          <div class="user-comment" style="padding-bottom: 30px;">
            <div class="profile" >
              <img src="<%= current_user.icon_image %>" alt="ユーザー画像" style="margin-left: 20px;">
              <div class="details">
                <div class="nickname" style="margin-right: 150px;" ><%= current_user.nickname %>
                </div>
                <div class="job" style="overflow: initial;">
                  <%= current_user.job %>
                </div>
              </div>
            </div>
            <div class="comment_pick" style="overflow: initial;">
              サンプル
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
<% end %>